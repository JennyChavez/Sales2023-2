@page "/countries"
@using Sales.Frontend.Reporitories;
@inject IRepository repository


<h3>Paises</h3>

<a class="btn btn-primary" href="/country/create">Nuevo País</a>

<GenericList MyList="countries"> 
    <NoRecords>
        <p>Aun no hay paises registrados.</p>
    </NoRecords>

    <Body>
        <table class="table table-striped">

            <thead>
                <tr>
                    <th>País</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var country in countries!)
                {
                    <tr>
                        <td>@country.Name</td>
                        <td></td>
                    </tr>
                }
            </tbody>

        </table>
         
    </Body>

</GenericList>


@code {
    private List<Country>? countries;

    protected override async Task OnInitializedAsync()
    {
        var response = await repository.GetAsync<List<Country>>("api/countries");
        if(response.Error)
        {
            //TODO  pendind to implement
            return;
        }

        countries = response.Response;
    }

}
